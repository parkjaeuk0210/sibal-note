{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "profile": {
          ".read": true
        },
        "settings": {
          ".read": "$uid === auth.uid",
          ".write": "$uid === auth.uid"
        }
      }
    },
    "shared_canvases": {
      "$canvasId": {
        ".read": "auth != null && (data.child('ownerId').val() === auth.uid || data.child('collaborators').hasChild(auth.uid) || data.child('share_tokens').hasChild(auth.token.shareToken))",
        ".write": "auth != null && (data.child('ownerId').val() === auth.uid || (data.child('collaborators').hasChild(auth.uid) && data.child('collaborators').child(auth.uid).child('role').val() === 'editor'))",
        "share_tokens": {
          "$tokenId": {
            ".validate": "newData.hasChildren(['created', 'role']) && (newData.child('role').val() === 'viewer' || newData.child('role').val() === 'editor')"
          }
        }
      }
    },
    "posts": {
      ".read": true,
      "$postId": {
        ".write": "auth != null && (auth.uid === data.child('authorId').val() || !data.exists())",
        ".validate": "newData.hasChildren(['authorId', 'content', 'timestamp']) && newData.child('authorId').val() === auth.uid"
      }
    },
    "chats": {
      "$canvasId": {
        ".read": "auth != null && root.child('shared_canvases').child($canvasId).child('collaborators').hasChild(auth.uid)",
        ".write": "auth != null && root.child('shared_canvases').child($canvasId).child('collaborators').hasChild(auth.uid)",
        "$messageId": {
          ".validate": "newData.hasChildren(['userId', 'text', 'timestamp']) && newData.child('userId').val() === auth.uid"
        }
      }
    }
  }
}