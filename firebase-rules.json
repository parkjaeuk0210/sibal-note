{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "shared_canvases": {
      "$canvasId": {
        ".read": "data.child('isPublic').val() === true || (auth != null && (data.child('owner').val() === auth.uid || data.child('participants').child(auth.uid).exists()))",
        ".write": "auth != null && ((!data.exists() && newData.child('owner').val() === auth.uid) || data.child('owner').val() === auth.uid || data.child('participants').child(auth.uid).child('role').val() === 'editor')",
        "participants": {
          "$participantId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid || $participantId === auth.uid)"
          }
        },
        "notes": {
          ".validate": "newData.hasChildren()",
          "$noteId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)",
            ".validate": "newData.hasChildren(['content', 'x', 'y', 'width', 'height', 'color', 'createdAt', 'userId'])"
          }
        },
        "images": {
          ".validate": "newData.hasChildren()",
          "$imageId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)"
          }
        },
        "files": {
          "$fileId": {
            ".write": "auth != null && (root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).child('role').val() === 'editor' || root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid)"
          }
        },
        "presence": {
          "$userId": {
            ".write": "$userId === auth.uid"
          }
        },
        "chat": {
          "messages": {
            ".read": "auth != null && (root.child('shared_canvases').child($canvasId).child('owner').val() === auth.uid || root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).exists())",
            "$messageId": {
              ".write": "auth != null && root.child('shared_canvases').child($canvasId).child('participants').child(auth.uid).exists()",
              ".validate": "newData.hasChildren(['userId','content','createdAt']) && newData.child('userId').val() === auth.uid && newData.child('content').isString()"
            }
          }
        }
      }
    },
    "share_tokens": {
      "$token": {
        ".read": true,
        ".write": "!data.exists() || (auth != null && data.child('createdBy').val() === auth.uid)",
        ".validate": "newData.hasChildren(['canvasId','createdBy','createdAt','role']) && (newData.child('role').val() === 'viewer' || newData.child('role').val() === 'editor')"
      }
    }
  }
}
